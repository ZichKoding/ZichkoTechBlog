<section>
    <h2>Create New Blog</h2>

    <form class="new-blog-form">
        <div>
            <label for="blog-title"> Enter a Blog Title</label>
            <br />
            <input type="text" id="blog-title" name="blog-title" />
        </div>
        <div>
            <textarea id="blog-text" placeholder="Enter your blog contents here"></textarea>
        </div>
        <button type="submit" class="btn">Submit</button>
    </form>
</section>

<section>
    <h2>Your Blogs</h2>
    <ol>
        {{#each blogs as |blog|}}
        <li>
            <article class="blog">
                <div class="title">
                    <h1>{{title}}</h1>
                </div>
                <div class="meta">
                    by {{user.username}} on
                    <br />
                    {{blog.created_at}}
                </div>
            </article>
        </li>
        {{/each}}
    </ol>
</section>

<script src="/javascript/add-blog.js"></script>