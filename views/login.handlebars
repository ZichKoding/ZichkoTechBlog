<div class="container">
    <div class="row">
        <form class="col-6 login-form">
            <div>
                <h3>Login</h3>
            </div>
            <div>
                <label for="email-login">Email:</label>
                <input type="text" id="email-login" class="login-input" />
            </div>
            <div>
                <label for="password-login">Password:</label>
                <input type="password" id="password-login" class="login-input" />
            </div>
            <div>
                <button type="submit">Login</button>
            </div>
        </form>

        <form class="col-6 signup-form">
            <div>
                <h3>Signup</h3>
            </div>
            <div>
                <label for="username-signup">Username:</label>
                <input type="text" id="username-signup" class="login-input" />
            </div>
            <div>
                <label for="email-signup">Email:</label>
                <input type="text" id="email-signup" class="login-input" />
            </div>
            <div>
                <label for="password-signup">Password:</label>
                <input type="password" id="password-signup" class="login-input" />
            </div>
            <div>
                <button type="submit">Signup</button>
            </div>
        </form>
    </div>
</div>
<script src="/javascript/login.js"></script>